<Window x:Class="Finals_temp.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Finals_temp"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="450" WindowStartupLocation="CenterScreen"
        Background="#F0F2F5">

    <DockPanel Margin="20,20,20,10">

        <!-- Bottom Navigation -->
        <Grid DockPanel.Dock="Bottom" Height="50" HorizontalAlignment="Stretch" Background="White" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Content="📊 Transactions"
                    Grid.Column="0"
                    Height="35"
                    Margin="5,0,5,0"
                    Background="#0078D7"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Click="TransactionsButton_Click" />

            <Button Content="🏠 Home"
                    Grid.Column="1"
                    Height="35"
                    Margin="5,0,5,0"
                    Background="#17A2B8"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Click="HomeButton_Click" />

            <Button Content="⚙ Options"
                    Grid.Column="2"
                    Height="35"
                    Margin="5,8,5,0"
                    Background="#6C757D"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Click="OptionsButton_Click" VerticalAlignment="Top" />
        </Grid>

        <!-- Main Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Welcome Panel -->
                <Border Background="#E0F0FF"
        CornerRadius="12"
        Padding="10"
        HorizontalAlignment="Center"
        Margin="0,0,0,5"
        Width="390">
                    <StackPanel>
                        <TextBlock Text="👋 Hello!"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="#007ACC"
                   Margin="0,0,0,0"/>
                    </StackPanel>
                </Border>


                <!-- Account Summary -->
                <Border Background="White"
                        CornerRadius="10"
                        Padding="15"
                        Margin="0,20,0,10">
                    <StackPanel>
                        <TextBlock Text="ACCOUNT"
                                   FontWeight="Bold"
                                   Foreground="#333"
                                   FontSize="16" />
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Allowance"
                                       Foreground="Gray"
                                       FontSize="14"
                                       VerticalAlignment="Center" />

                            <TextBlock x:Name="CashAmountText"
                                       Text="₱0.00"
                                       Grid.Column="1"
                                       Foreground="#0078D7"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       Margin="15,0,0,0" />
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Filter + Tabs for Chart / Category View -->
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,10,0,10">

                    <!-- Filter Selection -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0">
                        <TextBlock Text="Filter by:" VerticalAlignment="Center" Margin="0,0,5,0"/>

                        <ComboBox x:Name="DateFilterComboBox"
                  Width="150"
                  SelectedIndex="0"
                  SelectionChanged="DateFilterComboBox_SelectionChanged"
                  Margin="0,0,10,0">
                            <ComboBoxItem Content="Today" />
                            <ComboBoxItem Content="This Week" />
                            <ComboBoxItem Content="This Month" />
                            <ComboBoxItem Content="This Year" />
                        </ComboBox>
                    </StackPanel>

                    <!-- Tabs for Pie Chart and Category Breakdown -->
                    <TabControl Width="400" Height="350" Background="White" BorderThickness="0" Padding="5">
                        <!-- Pie Chart Tab -->
                        <TabItem Header="Basic">
                            <Border Background="#F9F9F9" Padding="10">
                                <lvc:PieChart x:Name="ExpensePieChart"
                              Series="{Binding PieSeries}"
                              LegendPosition="Right"
                              Width="350"
                              Height="300"/>
                            </Border>
                        </TabItem>

                        <!-- Category Breakdown Tab -->
                        <TabItem Header="Summary">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#F9F9F9">
                                <StackPanel x:Name="CategoryBreakdownPanel" Margin="5" />
                            </ScrollViewer>
                        </TabItem>
                    </TabControl>
                </StackPanel>



                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,10,0,20">
                    <Button Content="Add Balance"
                            Width="130"
                            Height="40"
                            Margin="0,0,10,0"
                            Background="#28A745"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderBrush="Transparent"
                            Cursor="Hand"
                            Click="AddCashButton_Click" />

                    <Button Content="Add Expense"
                            Width="130"
                            Height="40"
                            Background="#FFC107"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderBrush="Transparent"
                            Cursor="Hand"
                            Click="AddExpense_Click" />
                </StackPanel>


            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
