<Window x:Class="Finals_temp.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Finals_temp"
        mc:Ignorable="d"
        Title="Home" Height="800" Width="450" WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow" ResizeMode="NoResize">

    <!-- Full-screen Gradient Background -->
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#E0FFFF" Offset="0" />
            <GradientStop Color="#CCF5F0" Offset="1" />
        </LinearGradientBrush>
    </Window.Background>

    <DockPanel Margin="20,20,20,10">

        <!-- Bottom Navigation with Rounded Border -->
        <Border DockPanel.Dock="Bottom" Height="75" Background="White" CornerRadius="20" Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Transactions Button -->
                <Button Grid.Column="0"
                Height="50"
                Margin="5"
                Background="#0097B2"
                Foreground="White"
                FontWeight="Bold"
                BorderBrush="Transparent"
                Cursor="Hand"
                Click="TransactionsButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                            CornerRadius="15"
                            BorderBrush="{TemplateBinding BorderBrush}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    📊 Transactions
                </Button>

                <!-- Home Button -->
                <Button Grid.Column="1"
                Height="50"
                Margin="5"
                Background="#00F5D4"
                Foreground="#1A1F71"
                FontWeight="Bold"
                BorderBrush="Transparent"
                Cursor="Hand"
                Click="HomeButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                            CornerRadius="15"
                            BorderBrush="{TemplateBinding BorderBrush}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    🏠 Home
                </Button>

                <!-- Options Button -->
                <Button Grid.Column="2"
                Height="50"
                Margin="5"
                Background="#1A1F71"
                Foreground="White"
                FontWeight="Bold"
                BorderBrush="Transparent"
                Cursor="Hand"
                Click="OptionsButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                            CornerRadius="15"
                            BorderBrush="{TemplateBinding BorderBrush}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    ⚙ Options
                </Button>
            </Grid>
        </Border>


        <!-- Main Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Background="Transparent">

                <!-- Welcome Panel -->
                <Border Background="#00F5D4"
                        CornerRadius="12"
                        Padding="10"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,10"
                        Width="390">
                    <TextBlock Text="👋 Hello!"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="#1A1F71"/>
                </Border>

                <!-- Account Summary -->
                <Border Background="#F9FFFF"
                        CornerRadius="10"
                        Padding="15"
                        Margin="0,0,0,10"
                        BorderBrush="#00F5D4"
                        BorderThickness="2">
                    <StackPanel>
                        <TextBlock Text="ACCOUNT"
                                   FontWeight="Bold"
                                   Foreground="#1A1F71"
                                   FontSize="16" />
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Allowance"
                                       Foreground="Gray"
                                       FontSize="14"
                                       VerticalAlignment="Center" />

                            <TextBlock x:Name="CashAmountText"
                                       Text="₱0.00"
                                       Grid.Column="1"
                                       Foreground="#0097B2"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       Margin="15,0,0,0" />
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Filter + Tabs -->
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,10,0,10">

                    <!-- Filter -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,10">
                        <TextBlock Text="Filter by:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="#1A1F71" FontWeight="Bold"/>
                        <ComboBox x:Name="DateFilterComboBox"
          Width="150"
          SelectedIndex="0"
          SelectionChanged="DateFilterComboBox_SelectionChanged"
          Background="#E0FFFF"
          Foreground="#1A1F71"
          BorderBrush="#00F5D4"
          BorderThickness="2"
          Padding="5"
          FontWeight="Bold"
          FontSize="14"
          Margin="0"
          Cursor="Hand">
                            <ComboBox.Resources>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Foreground" Value="#1A1F71"/>
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Padding" Value="5"/>
                                </Style>
                            </ComboBox.Resources>
                            <ComboBoxItem Content="Today" />
                            <ComboBoxItem Content="This Week" />
                            <ComboBoxItem Content="This Month" />
                            <ComboBoxItem Content="This Year" />
                        </ComboBox>

                    </StackPanel>

                    <!-- Tabs -->
                    <TabControl Width="400" Height="350"
            Background="Transparent"
            BorderThickness="0"
            Padding="5"
            FontWeight="Bold"
            FontSize="14"
            Foreground="#1A1F71"
            Cursor="Hand">
    <!-- Pie Chart Tab -->
    <TabItem Header="📈 Chart"
             Background="#FF90FFF1"
             Margin="2"
             BorderThickness="0"
             FontWeight="Bold">
        <Border Background="#E5FFFB" Padding="10" CornerRadius="10" BorderBrush="#00F5D4" BorderThickness="2">
            <lvc:PieChart x:Name="ExpensePieChart"
                          Series="{Binding PieSeries}"
                          LegendPosition="Right"
                          Width="350"
                          Height="300"/>
        </Border>
    </TabItem>

    <!-- Summary Tab -->
    <TabItem Header="🗂 Summary"
             Background="#FF90FFF1"
             Margin="2"
             BorderThickness="0"
             FontWeight="Bold">
        <Border Background="#E5FFFB" Padding="10" CornerRadius="10" BorderBrush="#00F5D4" BorderThickness="2">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="CategoryBreakdownPanel" Margin="5"/>
            </ScrollViewer>
        </Border>
    </TabItem>
</TabControl>

                </StackPanel>

                <!-- Action Buttons -->
                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="0,10,0,20">
                    <Button Content="Add Balance"
            Width="130"
            Height="45"
            Margin="0,0,10,0"
            Background="#28A745"
            Foreground="White"
            FontWeight="Bold"
            BorderBrush="Transparent"
            Cursor="Hand"
            Click="AddCashButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                        CornerRadius="20"
                        BorderBrush="{TemplateBinding BorderBrush}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="Add Expense"
            Width="130"
            Height="45"
            Background="#FFC107"
            Foreground="White"
            FontWeight="Bold"
            BorderBrush="Transparent"
            Cursor="Hand"
            Click="AddExpense_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                        CornerRadius="20"
                        BorderBrush="{TemplateBinding BorderBrush}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>


            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
