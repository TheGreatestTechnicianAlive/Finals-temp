<Window x:Class="Finals_temp.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Finals_temp"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="450" WindowStartupLocation="CenterScreen"
        Background="#F0F2F5">

    <Grid Margin="20">
        <!-- Grid Row Definitions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Welcome Panel -->
        <Border Background="#0078D7"
                CornerRadius="10"
                Padding="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Width="390">
            <StackPanel>
                <TextBlock x:Name="WelcomeText"
                           Text="Welcome!"
                           Foreground="White"
                           FontWeight="Bold"
                           FontSize="14"
                           TextAlignment="Left" Width="370" />
            </StackPanel>
        </Border>

        <!-- Account Summary Section -->
        <Border Grid.Row="0"
                Background="White"
                CornerRadius="10"
                Padding="15"
                Margin="0,80,0,20">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="ACCOUNT"
                           FontWeight="Bold"
                           Foreground="#333"
                           FontSize="16" />

                <Grid Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Cash"
                               Foreground="Gray"
                               FontSize="14"
                               VerticalAlignment="Center" />

                    <TextBlock x:Name="CashAmountText"
                               Text="₱0.00"
                               Grid.Column="1"
                               Foreground="#0078D7"
                               FontSize="18"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="15,0,0,0" />
                </Grid>
            </StackPanel>
        </Border>

        <!-- Pie Chart -->
        <lvc:PieChart Grid.Row="1"
                      Series="{Binding PieSeries}"
                      LegendPosition="Right"
                      Width="400"
                      Height="300"
                      Margin="0,0,0,20" />

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,20">
            <Button Content="Add Currency"
                    Width="130"
                    Height="40"
                    Margin="0,0,10,0"
                    Background="#28A745"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Click="AddCashButton_Click" />

            <Button Content="Add Expense"
                    Width="130"
                    Height="40"
                    Background="#FFC107"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Click="AddExpense_Click" />
        </StackPanel>

        <!-- Logout Button -->
        <StackPanel Grid.Row="4"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <Button Content="Logout"
                    Width="150"
                    Height="35"
                    Background="#DC3545"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Click="LogoutButton_Click" />
        </StackPanel>
    </Grid>
</Window>
