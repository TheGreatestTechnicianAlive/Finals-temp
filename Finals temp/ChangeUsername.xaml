<Window x:Class="Finals_temp.ChangeUsername"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Username"
        Height="250" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#F0F2F5"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel>

            <TextBlock Text="New Username:" FontSize="16" Margin="0,0,0,10"/>
            <TextBox x:Name="NewUsernameTextBox" Height="35" FontSize="14" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Back" Click="BackButton_Click"
                        Height="35" Width="80" Margin="0,0,10,0"/>
                <Button Content="Save" Click="SaveButton_Click"
                        Height="35" Width="80" Background="#007ACC" Foreground="White"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
