<Window x:Class="Finals_temp.TransactionDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transaction Detail" Height="300" Width="350"
        WindowStartupLocation="CenterScreen" Background="#F8F9FA">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock x:Name="DateText" FontSize="16" FontWeight="Bold" Margin="0,10"/>
        <TextBlock x:Name="CategoryText" FontSize="14" Margin="0,10"/>
        <TextBlock x:Name="AmountText" FontSize="14" Margin="0,10"/>
        <TextBlock x:Name="NotesText" FontSize="14" Margin="0,10"/>
        <Button Content="Close" Click="Close_Click" Width="80" Height="30" HorizontalAlignment="Right" Margin="0,20,0,0"/>
    </StackPanel>
</Window>
