<Window x:Class="Finals_temp.TransactionDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transaction Detail"
        Height="400"
        Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#F3F5F9"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#0097B2"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Margin="20" Padding="25" CornerRadius="12" Background="White" BorderBrush="#DDD" BorderThickness="1">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" >

            <TextBlock Text="Transaction Details"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#1A1F71"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBlock x:Name="DateText"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="#555"
                       Margin="0,8"/>
            <TextBlock x:Name="CategoryText"
                       FontSize="16"
                       Foreground="#555"
                       Margin="0,8"/>
            <TextBlock x:Name="AmountText"
                       FontSize="16"
                       Foreground="#0097B2"
                       FontWeight="Bold"
                       Margin="0,8"/>
            <TextBlock x:Name="NotesText"
                       FontSize="16"
                       Foreground="#333"
                       TextWrapping="Wrap"
                       TextTrimming="CharacterEllipsis"
                       Margin="0,8"/>

            <Button Content="Close"
                    Click="Close_Click"
                    Width="110"
                    Height="40"
                    HorizontalAlignment="Right"
                    Style="{StaticResource RoundedButtonStyle}"
                    Margin="0,25,0,0"/>
        </StackPanel>
    </Border>
</Window>
