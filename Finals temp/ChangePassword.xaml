<Window x:Class="Finals_temp.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Password"
        Height="380" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#F0F2F5"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel>

            <TextBlock Text="Current Password:" FontSize="16" Margin="0,0,0,10"/>
            <PasswordBox x:Name="CurrentPasswordBox" Height="35" Margin="0,0,0,15"/>

            <TextBlock Text="New Password:" FontSize="16" Margin="0,0,0,10"/>
            <PasswordBox x:Name="NewPasswordBox" Height="35" Margin="0,0,0,15"/>

            <TextBlock Text="Confirm Password:" FontSize="16" Margin="0,0,0,10"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Height="35" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Back" Click="BackButton_Click"
                        Height="35" Width="80" Margin="0,0,10,0"/>
                <Button Content="Save" Click="SaveButton_Click"
                        Height="35" Width="80" Background="#007ACC" Foreground="White"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
