<Window x:Class="Finals_temp.Options"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Options"
        Height="800"
        Width="450"
        Background="#F3F5F9"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#0097B2"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="← Back"
                    Click="BackButton_Click"
                    Width="80"
                    Height="35"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Margin="0,10,0,5"
                    Background="#BDC3C7"
                    Foreground="Black"
                    BorderThickness="0"
                    HorizontalAlignment="Left"/>

            <TextBlock Grid.Column="1"
                       Text="Settings"
                       FontSize="26"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,0,30,0"
                       Foreground="#1A1F71"/>
        </Grid>

        <!-- Main Content -->
        <StackPanel Grid.Row="1" Margin="0,10,0,20" VerticalAlignment="Top" HorizontalAlignment="Center" Width="400">

            <!-- Welcome Banner -->
            <Border Background="#00F5D4" CornerRadius="12" Padding="12" Margin="0,0,0,20">
                <TextBlock x:Name="WelcomeText"
                           Text="Welcome!"
                           Foreground="#1A1F71"
                           FontWeight="Bold"
                           FontSize="16"/>
            </Border>

            <!-- Account Section -->
            <Border Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,20" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Account"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0,0,0,15"
                               Foreground="#0097B2"/>

                    <TextBlock Text="Change Username"
                               FontSize="16"
                               Foreground="#0097B2"
                               Cursor="Hand"
                               MouseLeftButtonUp="ChangeUsername_Click"
                               Margin="10,5"/>

                    <TextBlock Text="Change Password"
                               FontSize="16"
                               Foreground="#0097B2"
                               Cursor="Hand"
                               MouseLeftButtonUp="ChangePassword_Click"
                               Margin="10,5"/>
                </StackPanel>
            </Border>

            <!-- About Section -->
            <Border Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,20" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="About &amp; Support"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#0097B2"
                               Margin="0,0,0,15"/>

                    <TextBlock Text="This app helps you manage expenses and balance."
                               TextWrapping="Wrap"
                               FontSize="14"
                               Foreground="#333"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Contact: support@yourapp.com"
                               FontSize="14"
                               Foreground="Gray"/>
                </StackPanel>
            </Border>

            <!-- Version Section -->
            <Border Background="White" CornerRadius="12" Padding="20" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="App Version"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#0097B2"
                               Margin="0,0,0,15"/>
                    <TextBlock Text="v1.0.0"
                               FontSize="16"
                               FontStyle="Italic"
                               Foreground="#666"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Logout Button -->
        <Button Grid.Row="2"
                Content="Logout"
                Click="LogoutButton_Click"
                FontSize="18"
                Style="{StaticResource RoundedButtonStyle}"
                Background="#FF5252"
                Margin="0,10,0,0"
                HorizontalAlignment="Stretch"
                Height="50"/>
    </Grid>
</Window>
