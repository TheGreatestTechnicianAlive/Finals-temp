<Window x:Class="Finals_temp.Options"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Options"
        Height="800"
        Width="450"
        Background="#F0F2F5"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Back Button and Title -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Back Button -->
            <Button Content="← Back"
                    Click="BackButton_Click"
                    HorizontalAlignment="Left"
                    Margin="0,10,0,5"
                    Width="80"
                    Height="30"
                    Background="#D3D3D3"
                    Foreground="Black"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"/>

            <!-- Title -->
            <TextBlock Grid.Column="1"
                       Text="Settings"
                       FontSize="28"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="0,0,30,0"/>
        </Grid>

        <!-- Main Content -->
        <StackPanel Grid.Row="1" Margin="0,10,0,20" VerticalAlignment="Top" HorizontalAlignment="Center" Width="400">

            <!-- Welcome Banner -->
            <Border Background="#0078D7" CornerRadius="10" Padding="10" Margin="0,0,0,20">
                <TextBlock x:Name="WelcomeText"
                           Text="Welcome!"
                           Foreground="White"
                           FontWeight="Bold"
                           FontSize="14"
                           TextAlignment="Left"/>
            </Border>

            <!-- Account Section -->
            <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Account"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0,0,0,15"/>

                    <TextBlock Text="Change Username"
                               FontSize="16"
                               Foreground="#007ACC"
                               Cursor="Hand"
                               MouseLeftButtonUp="ChangeUsername_Click"
                               Margin="10,5"/>

                    <TextBlock Text="Change Password"
                               FontSize="16"
                               Foreground="#007ACC"
                               Cursor="Hand"
                               MouseLeftButtonUp="ChangePassword_Click"
                               Margin="10,5"/>
                </StackPanel>
            </Border>

            <!-- About Section -->
            <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="About &amp; Support"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0,0,0,15"/>
                    <TextBlock Text="This app helps you manage expenses and balance."
                               TextWrapping="Wrap"
                               FontSize="14"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Contact: support@yourapp.com"
                               FontSize="14"
                               Foreground="Gray"/>
                </StackPanel>
            </Border>

            <!-- Version Section -->
            <Border Background="White" CornerRadius="10" Padding="20">
                <StackPanel>
                    <TextBlock Text="App Version"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0,0,0,15"/>
                    <TextBlock Text="v1.0.0"
                               FontSize="16"
                               FontStyle="Italic"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Logout Button -->
        <Button Grid.Row="2"
                Content="Logout"
                Click="LogoutButton_Click"
                Background="#FF5252"
                Foreground="White"
                FontWeight="Bold"
                FontSize="18"
                Height="50"
                BorderThickness="0"
                Margin="0,10,0,0"
                HorizontalAlignment="Stretch"/>
    </Grid>
</Window>
