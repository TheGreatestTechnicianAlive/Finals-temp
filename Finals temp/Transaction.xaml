<Window x:Class="Finals_temp.Transaction"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transaction History" Height="800" Width="450" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F3F5F9">

    <DockPanel Margin="20">

        <!-- Bottom Navigation -->
        <Grid DockPanel.Dock="Bottom" Height="50" Background="White" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Content="📊 Transactions"
                    Grid.Column="0"
                    Height="35"
                    Margin="5,0,5,0"
                    Background="#0097B2"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Click="TransactionsButton_Click" />

            <Button Content="🏠 Home"
                    Grid.Column="1"
                    Height="35"
                    Margin="5,0,5,0"
                    Background="#00F5D4"
                    Foreground="#1A1F71"
                    FontWeight="Bold"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Click="HomeButton_Click" />

            <Button Content="⚙ Options"
                    Grid.Column="2"
                    Height="35"
                    Margin="5,0,5,0"
                    Background="#1A1F71"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Click="OptionsButton_Click" />
        </Grid>

        <!-- Main Content -->
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Stretch">

            <!-- Back Button -->
            <Button Content="← Back"
                    Click="BackButton_Click"
                    HorizontalAlignment="Left"
                    Margin="0,10,0,20"
                    Width="90"
                    Height="35"
                    Background="#BDC3C7"
                    Foreground="Black"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Padding="5,0"/>

            <!-- Scrollable Transaction List -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="650">
                <StackPanel x:Name="TransactionPanel" Margin="0,0,0,20" />
            </ScrollViewer>
        </StackPanel>
    </DockPanel>
</Window>
