<Window x:Class="Finals_temp.Transaction"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transaction History" Height="800" Width="450" 
        WindowStartupLocation="CenterScreen"
        Background="#F0F2F5" ResizeMode="NoResize">
    <DockPanel Margin="20">

        <!-- Bottom Navigation -->
        <Grid DockPanel.Dock="Bottom" Height="50" HorizontalAlignment="Stretch" Background="White" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Content="📊 Transactions"
                    Grid.Column="0"
                    Height="35"
                    Margin="5,0,5,0"
                    Background="#0078D7"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Click="TransactionsButton_Click" />

            <Button Content="🏠 Home"
                    Grid.Column="1"
                    Height="35"
                    Margin="5,0,5,0"
                    Background="#17A2B8"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Click="HomeButton_Click" />

            <Button Content="⚙ Options"
                    Grid.Column="2"
                    Height="35"
                    Margin="5,0,5,0"
                    Background="#6C757D"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Click="OptionsButton_Click" />
        </Grid>

        <!-- Main Content -->
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Stretch">
            <!-- Back Button -->
            <Button Content="← Back"
                    Click="BackButton_Click"
                    HorizontalAlignment="Left"
                    Margin="0,10,0,20"
                    Width="80"
                    Height="30"
                    Background="#d3d3d3"
                    Foreground="Black"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"/>

            <!-- Transaction Items -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="650">
                <StackPanel x:Name="TransactionPanel" />
            </ScrollViewer>
        </StackPanel>

    </DockPanel>
</Window>
